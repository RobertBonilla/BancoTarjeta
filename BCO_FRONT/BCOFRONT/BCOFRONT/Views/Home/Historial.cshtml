@{
    ViewData["Title"] = "Historial";
}
<h1>@ViewData["Title"]</h1>

<div class="mb-3 oculto-impresion">
    <button type="button" class="btn btn-light" onclick="Return();" >Atras</button>
    <button type="button" class="btn btn-primary" onclick="Imprimir();">Imprimir</button>
</div>
<div class="alert alert-info" role="alert">
  Historial de Transacciones del Mes
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Referencia</th>
                <th scope="col">Fecha</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Cargo</th>
                <th scope="col">Abono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ListaModel in Model.listTransaction)
            {
                <tr>
                    <td>@ListaModel.referencia</td>
                    <td>@ListaModel.fecha</td>
                    <td>@ListaModel.descripcion</td>
                    <td>@ListaModel.cargo</td>
                    <td>@ListaModel.abono</td>
                </tr>
                
            }
        </tbody>
    </table>
</div>

<script>
    function Return() {
        location.href = '/';
    }

    function Imprimir(){
        window.print();
    }
</script>